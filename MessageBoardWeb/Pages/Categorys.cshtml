@page
@model MessageBoardWeb.Pages.CategorysModel

<div class="container">
    <div class="col-lg-12">
        <h1>Categoryes</h1>
    </div>
    <br />
    <div class="col-lg-12">
        <div class="row">
            <div class="col-lg-12">
                <table class="table table-dark">
                    <tr>
                        <th>Category</th>
                    </tr>
                    @foreach (MessageBoardRepository.Entities.Category category in Model.Categorys)
                    {
                        if (category.CateogryId != 1)
                        {
                            <tr>

                                <td>@category.CategoryName</td>
                                <td>
                                    <a asp-page="/Edit/EditCategorys" asp-route-id=@category.CateogryId>Edit</a> |
                                    <a asp-page="/Delete/DeleteCategorys" asp-route-id=@category.CateogryId>Delete</a>
                                </td>

                            </tr>
                        }
                    }
                </table>
            </div>
        </div>

        <br />
        <a asp-page="/Index" class="btn btn-primary"><i class="btn text-white">Back To Home</i></a>
    </div>
</div>
