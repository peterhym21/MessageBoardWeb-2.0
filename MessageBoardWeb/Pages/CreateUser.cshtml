@page
@model MessageBoardWeb.Pages.CreateUserModel
<div class="container">
    <div class="col-lg-12">
        <h1>User Info Editing</h1>
    </div>
    <br />
    <div class="col-lg-12">
        <form method="post">
            <div class="row" asp-validation-summary="All">
                <div class="col-lg-6">
                    <div class="form-group">
                        <div class="form-group">
                            <p>User Name: </p>
                            <div class="input-group">
                                <input type="text" class="form-control" asp-for="Username" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <div class="form-group">
                            <p>Password: </p>
                            <div class="input-group">
                                <input type="password" class="form-control" asp-for="Password" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <div class="form-group">
                            <p>Type Password again: </p>
                            <div class="input-group">
                                <input type="password" class="form-control" asp-for="Passwordtwo" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div>
                        <button type="submit" class="btn btn-info">Create User</button>
                        <br />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
