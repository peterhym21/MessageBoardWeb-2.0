@page "{id:int}"
@model MessageBoardWeb.Pages.Delete.DeleteMessageModel
<div class="container">
    <div class="col-lg-12">
        <h1>Delete Message</h1>
    </div>
    <br />
    <div class="col-lg-12">
        <form method="post" asp-route="@Model.GetMessages.MessageId">
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        <div class="form-group">
                            <p>Message Title: </p>
                            <div class="input-group">
                                <label>@Model.GetMessages.Title</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <div class="form-group">
                            <p>Message Content: </p>
                            <div class="input-group">
                                <label>@Model.GetMessages.Content</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <div class="form-group">
                            <p>Message Category: </p>
                            <div class="input-group">
                                <label>@Model.GetCategory.CategoryName</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div>
                        <button type="submit" class="btn btn-info">Delete Message</button>
                        <br />
                    </div>
                </div>
            </div>
        </form>

        <br />
        <a asp-page="../Index" class="btn btn-primary"><i class="btn text-white">Back To Home</i></a>
    </div>
</div>
