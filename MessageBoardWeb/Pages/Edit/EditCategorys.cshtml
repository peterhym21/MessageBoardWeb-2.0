@page "{id:int}"
@model MessageBoardWeb.Pages.Edit.EditCategorysModel
<div class="container">
    <div class="col-lg-12">
        <h1>Category Editing</h1>
    </div>
    <br />
    <div class="col-lg-12">
        <form method="post" asp-route="@Model.GetCategory.CateogryId">
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        <div class="form-group">
                            <p>Insert Category Name: </p>
                            <div class="input-group">
                                <input type="text" class="form-control"
                                    placeholder="@Model.GetCategory.CategoryName" asp-for="Category" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div>
                        <button type="submit" class="btn btn-info">Save Category</button>
                        <br />
                    </div>
                </div>
            </div>
        </form>

        <br />
        <a asp-page="../Index" class="btn btn-primary"><i class="btn text-white">Back To Home</i></a>
    </div>
</div>
